<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:orientation="vertical"
    android:padding="24dp"
    >

    <TextView
        android:id="@+id/textViewSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Select Map Type"
        android:layout_marginBottom="16dp"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSelect"
        android:id="@+id/radioGroup">

    <RadioButton
        android:id="@+id/radioButtonNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textViewSelect"
        android:text="Normal" />

    <RadioButton
        android:id="@+id/radioButtonSatelite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/radioButtonNormal"
        android:text="Satelite" />

    <RadioButton
        android:id="@+id/radioButtonTerrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/radioButtonSatelite"
        android:text="Terrain" />

    <RadioButton
        android:id="@+id/radioButtonHybrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButtonTerrain"
        android:text="Hybrid" />

    </RadioGroup>
</RelativeLayout>